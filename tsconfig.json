{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "declaration": false,
    "lib": [
      "es2015",
      "dom"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types" : [
      "node",
      "hammerjs"
    ]
  },
  "include":[
    "src/app/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "/aot",
    "src/main-aot.ts"
  ]
}